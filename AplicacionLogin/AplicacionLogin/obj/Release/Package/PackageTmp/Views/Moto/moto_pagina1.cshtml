@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>

    <script type="text/javascript">
        $('#auto1ES').Click(function () {
            if ($('#auto1EN').css('display') == none) {
                $('#auto1EN').css('display', 'block');
            }
            else {
                $('#auto1EN').css('display', 'none');
            }
        })

    </script>
    <script type="text/javascript">
        function mostrarDiv() {
            document.getElementById('moto1EN').style.display = "block";
            document.getElementById('moto1ES').style.display = "none";
            //document.getElementById('menos').style.display = "block";
            document.getElementById('moto1ES').style.display = "none";
            document.getElementById('moto1EN').style.display = "block";

        }

        function ocultarDiv() {
            document.getElementById('moto1ES').style.display = "block";
            document.getElementById('moto1EN').style.display = "none";
            //document.getElementById('menos').style.display = "none";
            document.getElementById('moto1ES').style.display = "block";
            document.getElementById('moto1EN').style.display = "none";
        }


    </script>
    <script type="text/javascript">
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var form = document.getElementById('needs-validation');
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            }, false);
        })();
    </script>
