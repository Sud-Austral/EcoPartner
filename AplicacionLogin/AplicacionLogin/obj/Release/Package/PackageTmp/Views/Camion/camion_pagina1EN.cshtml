<div class="container-fluid">
    <form action="/Camion/CalculosCamion" method="post">
        <div class="row" style="margin-top: -1.9%; background-color:#117394">
            <div class="col-sm-1" style="background-color:transparent;">

            </div>
            <div class="col-sm-10" style="background-color:transparent;">

                <div class="row" style="padding:2%;">
                    <div class="col-sm-2" style="background-color:#117394">

                    </div>
                    <div class="col-sm-8" style="background-color:#117394;">
                        <style>
                            km:-ms-input-placeholder {
                                color: #ffff;
                            }
                        </style>

                        <script type="text/javascript">
                            $(document).ready(function () {



                                $('#kilometros').change(function () {
                                    var valor = $(this).val();
                                    $(this).val(valor + ' km');
                                });

                                $('#toneladas').change(function () {
                                    var valor = $(this).val();
                                    $(this).val(valor + ' T');
                                });



                            });
                        </script>
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


                        <div class="hijo">

                            <table>

                                <tr>
                                    <th style="width:50%">
                                        <span class="spam">&nbsp&nbsp&nbsp&nbsp&nbspKm traveled</span>
                                    </th>
                                    <th>
                                        <input id="" class="w-100 col-md-12 col-sm-10    input2" onkeypress="return validaNumericos(event)"
                                               type="text"
                                               min="1"
                                               placeholder="Type your traveled kms"
                                               step="0.1"
                                               name="kilometros" autocomplete="off" style="max-width: 500px !important;">

                                    </th>

                                </tr>
                                <tr>
                                    <th style="width:50%">
                                        <span class="spam">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspWeight of the load</span>
                                    </th>
                                    <th>
                                        <input id="" onkeypress="return validaNumericos(event)"
                                               type="text"
                                               min="0"
                                               placeholder="Type the amount of tons"
                                               step="0.001"
                                               name="toneladasCarga" class="w-100 col-md-12 col-sm-10    input2" autocomplete="off" style="max-width: 500px !important;" />

                                    </th>



                                </tr>

                                <tr>
                                    <th style="width:50%">
                                        <span>&nbspNow enter your info</span>
                                    </th>
                                    <th></th>



                                </tr>
                            </table>

                        </div>
                    </div>

                    <div class="col-sm-2" style="background-color:#117394">

                    </div>
                </div>
            </div>
            <div class="col-sm-1" style="background-color:transparent;">

            </div>
        </div>

        <!-///////////////////////////////////////////////////////////////////////////->

        <div class="row" style="margin-top: -33px; background-color:#117394">
            <div class="col-sm-2" style="background-color:transparent;">

            </div>
            <div class="col-sm-8" style="background-color:transparent;">
                <div class="row" style="padding:2%;">
                    <div class="col-sm-2" style="background-color:#117394">

                    </div>
                    <div class="col-sm-8" style="background-color:#117394;">
                        <div class="hijo">


                            <table>

                                <tr>
                                    <th style="width:43%">
                                        <span class="spam">Full name</span>
                                    </th>
                                    <th><input type="text" name="nombre" class="w-100 col-md-12 col-sm-10    input" required /></th>

                                </tr>
                                <tr>
                                    <th style="width:18%">
                                        <span class="spam">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspE-mail</span>
                                    </th>
                                    <th><input type="email" name="correo" class="w-100 col-md-12 col-sm-10    input" required /></th>

                                    <td>
                                    </td>

                                </tr>
                            </table>


                        </div>
                    </div>

                    <div class="col-sm-2" style="background-color:#117394">

                    </div>
                </div>
            </div>
            <div class="col-sm-2" style="background-color:transparent;">

            </div>
        </div>
        <br>


        <!-///////////////////////////////////////////////////////////////////////////->
        <div class="row" style="margin-top: -33px; background-color:#117394">
            <div class="col-sm-2" style="background-color:transparent;">

            </div>
            <div class="col-sm-8" style="background-color:transparent;">
                <div class="row" style="padding:2%;">
                    <div class="col-sm-2" style="background-color:#117394">

                    </div>
                    <div class="col-sm-8" style="background-color:#117394;">
                        <div class="hijo">
                            <table>

                                <tr>
                                    <th style="width:80%">
                                        <SAMP>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</SAMP>
                                    </th>
                                    <th>
                                        <input type="submit" name="calcular" class="calcular" value="Calculate">
                                    </th>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="col-sm-2" style="background-color:#117394">

                    </div>
                </div>
            </div>
            <div class="col-sm-2" style="background-color:transparent;">

            </div>
        </div>
    </form>
</div>

<script>
    function validaNumericos(event) {
        if (event.charCode >= 48 && event.charCode <= 57) {
            return true;
        }
        return false;
    }
</script>


