                        <div>

                            <input type="hidden" name="toneladas" value=" @ViewBag.toneladas" />
                            <input type="hidden" name="total" value="@ViewBag.total" />
                            <input onclick="location.href='http://localhost:62106/Moto/moto_pagina4_2'" style="margin-top:2%; margin-left:90%" class="calcular3 boton-color" name="actualizar" type="submit" value="ADELANTE">
                        </div>
                        <div>
                            <samp>&nbsp</samp>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-sm-1" style="background-color:transparent;">

            </div>
        </div>



        <button onclick="location.href='http://localhost:62106/Moto/moto_pagina1'">Página 1</button>
        <button onclick="location.href='http://localhost:62106/Moto/moto_pagina2'">Página 2</button>
        <button onclick="location.href='http://localhost:62106/Moto/moto_pagina3'">Página 3</button>

