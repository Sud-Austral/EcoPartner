
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <title>Prueba de Bootstrap 4</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <LINK rel="StyleSheet" href="~/Content/Site.css" type="text/css">
    <link rel="shortcut icon" href="~/Content/Img/favicon-32x32.png">
</head>

<body>


    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-12 col-xl-3" style="background-color:transparent;">
                <div class="row">
                    <div class="logo class col-3 col-sm-2 col-lg-2 col-xl-3" style="background-color:transparent;">
                        <img src="/Content/Img/Vector.png" class="img-fluid" alt="Responsive Image">
                    </div>
                    <div class="prueba col-8 col-sm-6 col-lg-8 col-xl-9 text-md-left text-lg-center text-xl-left" style="background-color:transparent; color:#ffff;">
                        <p id="estilo1">
                            <br>
                            <span id="logo"></span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-xl-6" style="background-color:transparent;">
                <div class="row divencabezado" style="padding:2%;">
                    <div class="col-2 " style="background-color:#117394;">
                        <p class="text-center" id="num">1</p>
                    </div>
                    <div class="col-2 " style="background-color:#02AFC1">
                        <p class="text-center" id="num">2</p>
                    </div>
                    <div class="col-6 " style="background-color:#04C3D7;">
                        <div class="row">
                            <div class="col-4 col-sm-2 col-xl-2 " style="background-color:transparent;">
                                <p class="num2 text-center" id="num">3</p>
                            </div>
                            <div class="col-8 col-sm-4 col-xl-4" style="background-color:transparent;">
                                <img src="~/Content/Img/Auto.png" class="car2 img-fluid" alt="Responsive Image" />
                            </div>
                            <div class="text-left d-none d-sm-block col-sm-6 col-xl-6" style="background-color:transparent; color:#ffff; padding-top:2%;">
                                <p id="estilo2textoAU3">
                                    <br>
                                    <span id="estilo2cabAU3"></span>
                                </p>
                            </div>
                        </div>
                    </div>


                    <div class="col-2" style="background-color:#0BEDBF">
                        <p class="text-center" id="num">4</p>
                    </div>
                </div>
            </div>
            <div class="d-none d-xl-block col-xl-3" style="background-color:transparent; padding-top:2.7%; ">

                <br>
            </div><br />
        </div>
    </div>

    <!-- CUERPO DE LA PÁGINA -->
    <div class="container-fluid">
        <div class="row" style="margin-top: -2%; background-color:#04C3D7">
            <div class="col-12 text-center" style="background-color:transparent;">
                <div class="row" style="padding-top:2%;">
                    <div class="TextosPag3 col-12 text-center">
                        <a>
                            <img src="~/Content/Img/nube.png">
                        </a>
                        <a> @ViewBag.toneladas</a>
                        <a>t de CO2 = $ @ViewBag.total USD</a>
                        <p class="textos2Pag3">@ViewBag.recorrido km recorridos</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- BOTONES PORCENTAJE-->
    <form name="calculos" method="post" action="/Auto/Auto_pagina4">
        <div class="container-fluid text-center">
            <div class="row" style="margin-top:-2px; background-color:#04C3D7">
                <div class="col-12 text-center" style="background-color:transparent;">
                    <div class="row">
                        <div class="col-12 text-center" id="pregunta" style="background-color:#04C3D7;">
                            <p class="textos3Pag3">Quiero compensar</p>
                            <img src="~/Content/Img/Frame1.png" alt="hoja">
                            <input type="radio" name="porsentaje" value="1" id="pregunta1" checked>
                            <label for="pregunta1">&nbsp&nbsp10%&nbsp </label>
                            <img src="~/Content/Img/Frame2.png" alt="hoja">
                            <input type="radio" name="porsentaje" value="2" id="pregunta2">
                            <label for="pregunta2">&nbsp&nbsp50%&nbsp </label>
                            <img src="~/Content/Img/Frame3.png" alt="hoja">
                            <input type="radio" name="porsentaje" value="3" id="pregunta3">
                            <label for="pregunta3">&nbsp100%&nbsp</label>
                            <input name="total" type="hidden" value="@ViewBag.total" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center" style="background-color:#04C3D7">
                    <p class="text-center textop3">Recuerda que trabajamos con precios justos para la <br> gestión y conservación de los recursos naturales</p>
                </div>

            </div>
        </div>

        <!--  Botones -->
        <div class="container-fluid">
            <div class="row" style="margin-top: -2px; background-color:#04C3D7">
                <div class="col-5 pl-1 col-sm-3 col-md-4 col-lg-4 col-xl-4" style="background-color:transparent;">
                    <a href="javascript: history.go(-1)"><input class="calcular3 boton-color" name="" type="button" value="<-- Atrás"></a>
                </div>
                <div class="hijo col-7 text-right col-sm-9 col-md-8 col-lg-4 text-lg-center col-xl-4 text-xl-center" style="background-color:#04C3D7;">
                    <input name="ton" type="hidden" value="@ViewBag.toneladas" />
                    <input name="nombre" type="hidden" value="@ViewBag.nombre">
                    <input name="correo" type="hidden" value="@ViewBag.correo">
                    <input class="calcular4 boton-color" name="actualizar" type="submit" value="QUIERO COMPENSAR">
                </div>
                <div class="col-5 pl-1 col-sm-3 col-md-4 col-lg-4 col-xl-4" style="background-color:transparent;">
                </div>
            </div>
        </div>
    </form>

    <!-- FOOTER -->
    <footer>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4" style="background-color:transparent">
                </div>
                <div class="col-lg-4 text-center" style="background-color:transparent">

                    <img src="~/Content/Img/logooEPB.png" />

                </div>
                <div class="col-lg-4" style="background-color:transparent">

                </div>
            </div>

        </div>
    </footer>
</body>


</html>


