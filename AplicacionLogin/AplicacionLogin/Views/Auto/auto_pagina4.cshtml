
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <title>Prueba de Bootstrap 4</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <LINK rel="StyleSheet" href="~/Content/Site.css" type="text/css">
    <link rel="shortcut icon" href="~/Content/Img/favicon-32x32.png">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-12 col-xl-3" style="background-color:transparent;">
                <div class="row">
                    <div class="logo class col-3 col-sm-2 col-lg-2 col-xl-3" style="background-color:transparent;">
                        <img src="/Content/Img/Vector.png" class="img-fluid" alt="Responsive Image">
                    </div>
                    <div class="prueba col-8 col-sm-6 col-lg-8 col-xl-9 text-md-left text-lg-center text-xl-left" style="background-color:transparent; color:#ffff;">
                        <p id="estilo1">
                            <br>
                            <span id="logo"></span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-xl-6" style="background-color:transparent;">
                <div class="row divencabezado" style="padding:2%;">
                    <div class="col-2 " style="background-color:#117394;">
                        <p class="text-center" id="num">1</p>
                    </div>
                    <div class="col-2 " style="background-color:#02AFC1">
                        <p class="text-center" id="num">2</p>
                    </div>
                    <div class="col-2" style="background-color:#04C3D7">
                        <p class="text-center" id="num">3</p>
                    </div>
                    <div class="col-6 " style="background-color:#0BEDBF;">
                        <div class="row">
                            <div class="col-4 col-sm-2 col-xl-2 " style="background-color:transparent;">
                                <p class="num2 text-center" id="num">4</p>
                            </div>
                            <div class="col-8 col-sm-4 col-xl-4" style="background-color:transparent;">
                                <img src="~/Content/Img/Auto.png" class="car2 img-fluid" alt="Responsive Image" />
                            </div>
                            <div class="text-left d-none d-sm-block col-sm-6 col-xl-6" style="background-color:transparent; color:#ffff; padding-top:2%;">
                                <p id="estilo2textoAU4">
                                    <br>
                                    <span id="estilo2cabAU4"></span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-none d-xl-block col-xl-3" style="background-color:transparent; padding-top:2.7%; ">

                <br>
            </div><br />
        </div>
    </div>

    <!-- CUERPO DE LA PÁGINA -->
    <form name="calculos" method="post" action="/Auto/auto_pagina4_1">
        <div class="container-fluid" style="background-color: #0BEDBF; margin-top:-2%; ">
            <div class="row" >
                <div class="col-sm-1" style="background-color:transparent;">
                  
                </div>
                <div class="col-12 col-sm-5" style="background-color:transparent;  margin-top:2%;">
                    <div class="row">
                        <div class="col-4 col-sm-5 text-right" style="background-color:transparent; color:#117394">
                            <p class="">Nombre</p>
                            <p class="">Teléfono</p>
                            <p class="">Nombre de la empresa</p>
                        </div>
                        <div class="col-8 col-sm-7" style="background-color:transparent;">
                            <input type="text" required name="nombre" value="@ViewBag.nombre" class="input3" autocomplete="off" readonly />
                            <input type="text" style="margin-top:3%;" name="telefono" class="input3" autocomplete="off" onkeypress="return validaNumericos(event)" required />
                            <input type="text" style="margin-top:5%;" name="empresa" class="input3" autocomplete="off" />
                        </div>
                    </div>     
                </div>
                <div class="col-12 col-sm-5" style="background-color:transparent;  margin-top:2%; color:#117394">
                    <div class="row">
                        <div class="col-4 col-sm-3 text-right text-right" style="background-color:transparent;">
                            <p class="">País/Región*</p>
                            <p class="">E-mail*</p>
                        </div>
                        <div class="col-8 col-sm-9" style="background-color:transparent;">
                            <input type="text" name="pais" class="input3" autocomplete="off" required /><br />
                            <input type="text" style="margin-top:3%;" name="email" value="@ViewBag.correo" class="input3" autocomplete="off" readonly />
                        </div>
                    </div>
                </div>
                <div class="col-sm-1" style="background-color:transparent;">

                </div>
            </div>
        </div>
     
        <!-- BOTONES -->
   
        <div class="row w-100" style="background-color: #0BEDBF; ">
            <div class="col-sm-1" style="background-color:transparent;">

            </div>
            <div class="col-sm-10" style=" background-color: transparent;">
                <div class="row" style="padding:2%;">

                    <div class="col-sm-5" style=" background-color: #0BEDBF; color:#117394">
                        <table>
                            <tr>
                                <th>
                                    <span>&nbsp&nbsp</span>

                                </th>
                            </tr>
                            <tr>

                                <th>
                                    <a href="javascript: history.go(-1)"><input class="calcular3 boton-color" name="" type="button" value="<-- Atrás"></a>

                                </th>
                            </tr>
                            <tr>
                                <th>
                                    <span>&nbsp&nbsp</span>
                                </th>
                            </tr>


                        </table>


                    </div>
                    <div class="col-sm-2" style=" background-color: #0BEDBF; color:#117394">

                        <table>
                            <tr>
                                <th>
                                    <span>&nbsp&nbsp</span>
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    <input class="calcular3 boton-color" name="actualizar" type="submit" value="ADELANTE">
                                    <input type="hidden" name="calculo" value="@ViewBag.totalf" />
                                    <input type="hidden" name="ton" value="@ViewBag.toneladas" />

                                </th>
                            </tr>
                            <tr>
                                <th>
                                    <span>&nbsp&nbsp</span>
                                </th>
                            </tr>


                        </table>



                    </div>
                    <div class="col-sm-5" style=" background-color: #0BEDBF; color:#117394">



                    </div>

                </div>
            </div>
            <div class="col-sm-1" style="background-color:transparent;">

            </div>
        </div>
    </form>


    <!-- Footer -->
    <footer>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4" style="background-color:transparent">
                </div>
                <div class="col-lg-4" style="background-color:transparent">

                    <img style="margin-left:25%" src="~/Content/Img/logooEPB.png" />

                </div>
                <div class="col-lg-4" style="background-color:transparent">

                </div>
            </div>

        </div>
    </footer>
</body>
</html>


<script>
    function validaNumericos(event) {
        if (event.charCode >= 48 && event.charCode <= 57) {
            return true;
        }
        return false;
    }
</script>


