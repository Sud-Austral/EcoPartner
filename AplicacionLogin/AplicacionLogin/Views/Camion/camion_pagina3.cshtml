
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <title>Prueba de Bootstrap 4</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <LINK rel="StyleSheet" href="~/Content/Site.css" type="text/css">
    <link rel="shortcut icon" href="~/Content/Img/favicon-32x32.png">
</head>

<body>

    <div class="container-fluid">
        <div class="row" style="padding:1%">
            <div class="col-md-3" style="background-color:transparent;">
                <div class="row">
                    <div class="col-md-3" style="background-color:transparent;">
                        <img style="padding:2%" src="~/Content/Img/Vector.png">
                    </div>
                    <div class="col-md-9" style="background-color:transparent; color:#ffff; padding-top:5%; padding-left:8%;">
                        <p style="font-size:15px;">
                            CALCULADORA
                            <span style="font-size:22px; font-weight: bold;">ECOPARTNERSBANK</span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6" style="background-color:transparent;">
                <div class="row" style="padding:2%;">
                    <div class="col-md-2" style="background-color:#117394;">
                        <p id="num" style="padding-top:18%; padding-left:22%;">1</p>
                    </div>
                    <div class="col-md-2" style="background-color:#02AFC1;">
                        <p id="num" style="padding-top:18%; padding-left:22%;">2</p>
                    </div>
                    <div class="col-md-6" style="background-color:#04C3D7;">
                        <div class="row">
                            <div class="col-md-2" style="background-color:transparent;">
                                <p id="num" style="padding-top:45%; padding-left:22%;">3</p>
                            </div>
                            <div class="col-md-3" style="background-color:transparent;  padding-top:5%;">
                                <img src="~/Content/Img/Camion.png" alt="Camion" />
                            </div>
                            <div class="col-md-7" style="background-color:transparent; color:#ffff; padding-top:2%; padding-left:10%;">
                                <p style="font-size:12px;">
                                    <span style="font-size:30px; font-weight: bold;">Compensa</span>
                                    Tu emisión de CO2

                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2" style="background-color:#0BEDBF">
                        <p id="num" style="padding-top:18%; padding-left:22%;">4</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3" style="background-color:transparent;">
            </div>
        </div>
    </div>
    <!-- CUERPO DE LA PÁGINA -->
    <div class="container-fluid">
        <div class="row" style="margin-top: -2%; background-color:#04C3D7">
            <div class="col-md-12" style="background-color:transparent;">
                <div class="row" style="padding-top:2%;">
                    <div class="TextosPag3 col-12 col-12 text-center" style="background-color:#04C3D7;">
                        <a>
                            <img style="padding:2%" src="~/Content/Img/nube.png">
                        </a>
                        <a> @ViewBag.toneladas</a>
                        <a>T de CO2 = $ @ViewBag.total USD</a>
                        <p class="spam " style="padding-left:10%;" >@ViewBag.recorrido km recorridos</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-///////////////////////////////////////////////////////////////////////////->
    <form name="calculos" method="post" action="/Camion/camion_pagina4">
        <div class="container-fluid text-center">
            <div class="row" style="margin-top: -2px; background-color:#04C3D7">
                <div class="col-12 text-center" style="background-color:transparent;">
                    <div class="row">
                        <div class="col-12 text-center" id="pregunta" style="background-color:#04C3D7;">
                            <p class="textos3Pag3">Quiero compensar</p>
                            <img src="~/Content/Img/Frame1.png" alt="hoja">
                            <input type="radio" name="porsentaje" value="1" id="pregunta1" checked>
                            <label for="pregunta1">&nbsp&nbsp10%&nbsp </label>
                            <img src="~/Content/Img/Frame2.png" alt="hoja">
                            <input type="radio" name="porsentaje" value="2" id="pregunta2">
                            <label for="pregunta2">&nbsp&nbsp50%&nbsp </label>
                            <img src="~/Content/Img/Frame3.png" alt="hoja">
                            <input type="radio" name="porsentaje" value="3" id="pregunta3">
                            <label for="pregunta3">&nbsp100%&nbsp</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center" style="background-color:#04C3D7">
                    <p class="text-center textop3">Recuerda que trabajamos con precios justos para la <br> gestión y conservación de los recursos naturales
                    </p>
                </div>
            </div>
        </div>

        <!--Botones-->
        <div class="container-fluid">
            <div class="row" style="margin-top: -2px; background-color:#04C3D7">
                <div class="col-5 pl-1 col-sm-3 col-md-4 col-lg-4 col-xl-4" style="background-color:transparent;">
                    <a href="javascript: history.go(-1)"><input class="calcular3 boton-color" name="" type="button" value="<-- Atrás"></a>
                </div>
                <div class="hijo col-7 text-right col-sm-9 col-md-8 col-lg-4 text-lg-center col-xl-4 text-xl-center" style="background-color:#04C3D7;">
                    <input name="total" type="hidden" value="@ViewBag.total" />
                    <input name="ton" type="hidden" value="@ViewBag.toneladas" />
                    <input name="nombre" type="hidden" value="@ViewBag.nombre" />
                    <input name="correo" type="hidden" value="@ViewBag.correo" />
                    <input class="calcular4 boton-color" name="actualizar" type="submit" value="QUIERO COMPENSAR">
                </div>
                <div class="col-5 pl-1 col-sm-3 col-md-4 col-lg-4 col-xl-4" style="background-color:transparent;">
                </div>
            </div>
        </div>
    </form>

    <!-- FOOTER -->
    <footer>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4" style="background-color:transparent">
                </div>
                <div class="col-lg-4 text-center" style="background-color:transparent">

                    <img src="~/Content/Img/logooEPB.png" />

                </div>
                <div class="col-lg-4" style="background-color:transparent">

                </div>
            </div>

        </div>
    </footer>
</body>
</html>


